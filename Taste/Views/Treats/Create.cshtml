@{
    Layout = "_Layout";
}

@model Taste.Models.Treat

<h4>Add Treat</h4>

<hr />
<p>
    @Html.ValidationMessageFor(model => model.Name)
</p>
@using (Html.BeginForm())
{
    @Html.Label("Name")
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

    <br />

    @Html.Label("Description")
    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })

    <br>

    <input type="submit" value="Complete" class="btn btn-default" required="true" />
}

<p>@Html.ActionLink("back to treats directory", "Index")</p>

    @Html.Label("Flavors")
    @Html.DropDownList("FlavorId", ViewBag.FlavorList as SelectList, string.Empty, new { @class = "form-control" })

