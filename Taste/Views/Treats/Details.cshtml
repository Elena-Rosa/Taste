@{
    Layout = "_Layout";
}

@using Taste.Models
@model Taste.Models.Treat
@using System.Collections.Generic;

<h2>Treat</h2>

<hr />

<h3>@Html.DisplayFor(model => model.Name)</h3>


@if (Model.JoinEntities.Count == 0)
{
    <p>Treat has no flavors assigned</p>
}
else
{
    <h4>Treat flavor list</h4>
    <ul>
    @foreach (var join in Model.JoinEntities)
        {
            <li>@join.Flavor.Description</li>
            @using (Html.BeginForm("DeleteFlavor", "Treats"))

            {
                @Html.Hidden("joinId", @join.TreatFlavorId)
                <input type="submit" value="remove" />
            }
        }
    </ul>
}

<ul class="menu-links">
    <li>@Html.ActionLink("edit treat", "Edit", new { id = Model.TreatId })</li>
    <li>@Html.ActionLink("delete treat", "Delete", new { id = Model.TreatId })</li>
    <li>@Html.ActionLink("assign to a flavor", "AddFlavor", new { id = Model.TreatId })</li>
    <li>@Html.ActionLink("back to treat directory", "Index")</li>
</ul>
