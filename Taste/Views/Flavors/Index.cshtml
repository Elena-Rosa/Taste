@{
  Layout = "_Layout";
}

@using Taste.Models;

<h1>Flavors for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>

    }
  </ul>
}
<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Add new flavor", "Create", "Flavors")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>